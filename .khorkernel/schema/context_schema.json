{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Khora Kernel Context Schema v1.0.2",
  "description": "Schema for .khora/context.yaml generated by gen_context.py.",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Version of the context schema format"
    },
    "kernel_version": {
      "type": "string",
      "description": "Version of the Khora Kernel that generated this context"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when the context was generated"
    },
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name from the manifest"
        },
        "description": {
          "type": "string",
          "description": "Project description from the manifest"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "infrastructure": {
      "type": "object",
      "properties": {
        "broker_type": {
          "type": "string",
          "enum": ["redis", "listen_notify", "none"],
          "description": "Type of broker used for inter-service communication"
        },
        "database_type": {
          "type": "string",
          "enum": ["postgres", "sqlite", "none"],
          "description": "Type of database used"
        },
        "observability_enabled": {
          "type": "boolean",
          "description": "Whether observability stack is enabled"
        },
        "security_gates_enabled": {
          "type": "boolean",
          "description": "Whether security scanning gates are enabled"
        },
        "http_port": {
          "type": ["integer", "null"],
          "description": "Port for the HTTP service"
        }
      },
      "required": ["broker_type", "database_type"],
      "additionalProperties": true
    },
    "paths": {
      "type": "object",
      "description": "Key project file paths",
      "additionalProperties": {
        "type": "string"
      }
    },
    "bounded_contexts": {
      "type": "array",
      "description": "List of logical domains/services within the application",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the context"
          },
          "name": {
            "type": "string",
            "description": "Human-readable name"
          },
          "description": {
            "type": "string",
            "description": "Description of the context's purpose"
          },
          "path": {
            "type": "string",
            "description": "File path to the context's code"
          },
          "container_service": {
            "type": "string",
            "description": "Name of the Docker Compose service for this context"
          }
        },
        "required": ["id"],
        "additionalProperties": true
      }
    },
    "knowledge_graph_summary": {
      "type": "object",
      "description": "Summary information about the knowledge graph",
      "properties": {
        "concepts_hash": {
          "type": ["string", "null"],
          "description": "SHA1 hash of the concepts.json file"
        },
        "rules_hash": {
          "type": ["string", "null"],
          "description": "SHA1 hash of the rules.json file"
        },
        "concept_count": {
          "type": "integer",
          "description": "Number of concepts in the knowledge graph"
        },
        "rule_count": {
          "type": "integer",
          "description": "Number of rules in the knowledge graph"
        },
        "source_dir": {
          "type": "string",
          "description": "Directory containing the knowledge graph files"
        }
      },
      "additionalProperties": true
    },
    "plugins_enabled": {
      "type": "array",
      "description": "List of enabled plugins",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "schema_version",
    "kernel_version",
    "generated_at",
    "project",
    "infrastructure"
  ],
  "additionalProperties": true
}